<%= render 'shared/errors_messages', object: @workout %>

<h2><%=@workout.name %> <small>| <%=full_date(@workout.date)%></small></h2>
<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to "Edit", edit_workout_path(@workout), class: "btn btn-secondary" %>
  <%= link_to "Delete", workout_path(@workout), method: :delete, class: "btn btn-secondary" %>
  <%= link_to "Add Exercises", workout_exercises_path(@workout), class: "btn btn-primary" %>
</div>
<br>
<br>
<%=render partial: 'exercises/exercise', collection: @workout.exercises %>

