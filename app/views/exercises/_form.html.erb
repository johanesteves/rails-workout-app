<%=form_for(exercise, html: {class: 'form-inline'}) do |f| %>
    <%=f.label :name, "Name: ", class:'mr-sm-2' %>
    <%=f.text_field :name, class: 'form-control mb-2 mr-sm-2 mb-sm-0'%>
    <%=f.label :bodypart, "Body Part: ", class:'mr-sm-2' %>
    <%=f.select :bodypart, Exercise.body_parts, {include_blank: "-select-"}, class:'custom-select mb-2 mr-sm-2 mb-sm-0'%>

    <%=f.submit class: 'btn btn-success' %>

<% end %>